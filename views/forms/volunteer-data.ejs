    <script defer src="https://use.fontawesome.com/releases/v5.13.0/js/all.js"></script>
    <title>Volunteer Data</title>
</head>

<body class="mainn">
    <a id="myBtn" href="#top" title="Go to top"><i class="fas fa-arrow-alt-circle-up fa-3x" style="color:  rgb(255, 187, 0);;"></i></a>
    <%-include('../partials/navbar')%>
    <!-- <a href="" class="fs-5" style="color: aliceblue; ">Logout</a> <br>
    <a href="" class="fs-5" style="color: aliceblue; ">Go Back</a> -->
    <div class="container cardd table-responsive">
        <h1 class="text-center">Volunteer</h1>
        <table class="table table-borderless table-striped table-warning">
            <thead>
              <tr>
                <th scope="col">No.</th>
                <th scope="col">Date</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">DoB</th>
                <th scope="col">Gender</th>
                <th scope="col">State</th>
                <th scope="col">Contact</th>
                <th scope="col">DonationStatus</th>
                <th scope="col">Suggestions for helping people</th>
              </tr>
            </thead>
            <tbody>
              <%volunteer.forEach((person,index)=>{%>
              <tr>
                <th scope="row"><%=index+1%></th>
                <td><%=person.date%></td>
                <td><%=person.name%></td>
                <td><%=person.email%></td>
                <td><%=person.dob.split('-').reverse().join('/')%></td>
                <td><%=person.gender%></td>
                <td><%=person.state%></td>
                <td><%=person.contact%></td>
                <td><%=person.donationstatus%></td>
                <td><%=person.reason%></td>
              </tr>
              <%})%>
            </tbody>
          </table>
    </div>



</body>

</html>