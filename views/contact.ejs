                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Your Message:</label><br>
                        <textarea class="form-control" id="nMessage" name="nMessage" rows="5" required
                            placeholder="Enter Your Message"></textarea>
                    </div><br>
                    <input type="button" value="Submit" class="fs-3 my-3 px-5" style="background-color: gray; border-radius: 5px 5px; color: white;">
